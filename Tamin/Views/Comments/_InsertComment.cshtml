@using CaptchaMvc.HtmlHelpers

@model Tamin.Models.Comment

<div class="category-tab shop-details-tab">

    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#reviews" data-toggle="tab">ارسال نظر</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="reviews">
            <div class="col-sm-12">

                <p><b>محل نوشتن دیدگاه شما</b></p>
                @using (Html.BeginForm("InsertComment", "Comments", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.Hidden("postId")

                    <span>
                        @Html.TextBoxFor(model => model.Author, new { @placeholder = "نام و نام خانوادگی", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.Author)
                    </span>
                    <br /><br />
                    <span>
                        @Html.TextBoxFor(model => model.Author_Email, new { @placeholder = "آدرس ایمیل", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.Author_Email)
                    </span>
                    <br /><br />
                    <span>
                        @Html.TextBoxFor(model => model.Comment_title, new { @placeholder = "موضوع", @maxlength = "100" })
                        @Html.ValidationMessageFor(model => model.Comment_title)
                    </span>


                    @Html.TextAreaFor(model => model.CommentContent, new { @placeholder = "متن نظر" })
                    @Html.ValidationMessageFor(model => model.CommentContent)

                    <span id="captcha">
                        @Html.Captcha("ایجاد یک کد دیگر", "لطفا کد تصویر را وارد نمایید", 4)
                    </span>


                    <button name="sendComment" id="sendComment" type="submit" class="btn btn-default pull-right form-margin">
                        ثبت
                    </button>
                }


            </div>
        </div>

    </div>
</div>

