
@model IEnumerable<Tamin.Models.Contact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="panel">
    <header class="panel-heading">
        فهرست 
        <span class="tools pull-left">
            <a class="fa fa-chevron-down" href="javascript:;"></a>
        </span>
    </header>
    
    
    <div class="panel-body">

        <div class="space15"></div>
        <table class="table editable-table table-hover table-bordered" id="editable-sample">
            <thead>
            <tr>

                <th>
                    @Html.DisplayName("نام")                

                </th>
                <th>
                    @Html.DisplayName("شماره تماس")                
                </th>
                <th>
                    @Html.DisplayName("موضوع")
                </th>                

                <th>@Html.DisplayName("دستورات")</th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Count() == 0)
            {
                <tr><td colspan="8" class="text-center">هیچ داده ای جهت نمایش وجود ندارد</td></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr class="">


                        <td>
                            @Html.DisplayFor(modelItem => item.Family)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tell)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>

                            @Html.ActionLink("مشاهده", "Edit", new { id = item.ContactId }, new { @class = "btn btn-primary btn-xs" })

                            @Html.ActionLink("حذف", "Delete", new { id = item.ContactId }, new { @class = "btn btn-danger btn-xs" })

                            
                        </td>
                    </tr>
                }
            }
                
            </tbody>
        </table>
    </div>  
</section>
