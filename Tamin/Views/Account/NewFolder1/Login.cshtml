@using EshopMVC.Models
@model LoginViewModel
@{
    ViewBag.Title = "ورود به سایت";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>ورود به حساب کاربری</h2>
                    <hr />
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "آدرس ایمیل" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })


                        @Html.PasswordFor(m => m.Password, new { @placeholder = "کلمه عبور" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        <div>
                            <span>
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.Label("مرابخاطر بسپار")
                            </span>
                        </div>


                        <div class="row">
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-default">ورود</button>
                            </div>
                            <div class="col-md-3" style="margin-top:7px;">
                                @Html.ActionLink("انصراف", "Index", "Home", null, new { @class = "btn btn-primary", @style = "margin-right:22px;" })
                            </div>
                        </div>
                        <br />
                        <p>
                            <div class="col-md-4">@Html.ActionLink("ایجاد حساب کاربری جدید", "Register", "Account", null, new { @class = "btn btn-success"})</div>
                            <div class="col-md-4">@Html.ActionLink("رمز عبور خود را فراموش کرده اید؟", "ForgotPassword", "Account", null, new { @class = "btn btn-danger", @style = "margin-right:77px;" })</div>
                            

                            
                        </p>
                    }
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>

