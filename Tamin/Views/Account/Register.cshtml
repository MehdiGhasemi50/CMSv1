@model Tamin.Models.RegisterViewModel
@{
    ViewBag.Title = "ثبت نام سایت";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <h2>ثبت نام در سایت</h2>
                    <hr />
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "آدرس ایمیل" })

                        @Html.PasswordFor(m => m.Password, new { @placeholder = "کلمه عبور" })

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "تکرار کلمه عبور" })


                        <div class="row">
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-default" style="padding:6px 15px !important;">ثبت نام</button>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@if (!String.IsNullOrEmpty(ViewBag.info))
{
    <div id="info" style="position: fixed; bottom: 0; right: 0; margin-right: 1%;">

        <div class="alert @ViewBag.color alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <strong> @ViewBag.info</strong>
        </div>

    </div>
    <script>
        $(function () {
            $("#info").fadeOut(15000);
        });
    </script>
}


