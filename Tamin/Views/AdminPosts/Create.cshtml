@model Tamin.Models.Post

@{
    ViewBag.Title = "افزودن ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="panel">
    <header class="panel-heading">
        افزودن خبر
    </header>
    <div class="panel-body">
        @using (Html.BeginForm("Create", "AdminPosts", FormMethod.Post, new { @id = "form_UploadFile", @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <fieldset>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PostTitle, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PostTitle, new { @class = "form-control col-md-12" })
                            @Html.ValidationMessageFor(model => model.PostTitle)
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PostGroupID, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("PostGroupID", "--عنوان گروه خبر را انتخاب کنید--")
                            @Html.ValidationMessageFor(model => model.PostGroupID)
                        </div>
                    </div>
                </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Summary, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Summary)
                            @Html.ValidationMessageFor(model => model.Summary)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PostText, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PostText)
                            @Html.ValidationMessageFor(model => model.PostText)
                        </div>
                    </div>

                    <div class="form-group" style="display: none;">

                        @Html.LabelFor(model => model.PostDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PostDate)
                            @Html.ValidationMessageFor(model => model.PostDate)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PostIsActive, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PostIsActive)
                            @Html.ValidationMessageFor(model => model.PostIsActive)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Priority, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Priority)
                            @Html.ValidationMessageFor(model => model.Priority)
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Comment_status, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Comment_status)
                            @Html.ValidationMessageFor(model => model.Comment_status)
                        </div>
                    </div>



                    <div class="form-group">
                        <button style="margin-right: -5px;" type="button" class="btn btn-link" data-toggle="collapse" data-target="#panel">تعیین تاریخ شروع و تاریخ پایان برای خبر</button>
                        <div id="panel" class="collapse">
                            <BR />

                            <div class="form-group">
                                @Html.LabelFor(model => model.Startdate, new { @class = "control-label col-md-2" })
                                <div class="col-md-2">
                                    @Html.EditorFor(model => model.Startdate, new { @class = "control-label col-md-2" })
                                    @Html.ValidationMessageFor(model => model.Startdate)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Enddate, new { @class = "control-label col-md-2" })
                                <div class="col-md-2">

                                    @Html.EditorFor(model => model.Enddate, new { @class = "col-md-2" })
                                    @Html.ValidationMessageFor(model => model.Enddate)
                                </div>
                            </div>

                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.ImageUrl, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ImageUrl)
                            @Html.ValidationMessageFor(model => model.ImageUrl)
                        </div>
                    </div>

                    @*<div class="form-group">
                @Html.LabelFor(model => model.PostThumbnailImageUrl, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PostThumbnailImageUrl)
                    @Html.ValidationMessageFor(model => model.PostThumbnailImageUrl)
                </div>
            </div>*@

                    <div id="buttons">
                        <div class="col-md-2">
                        </div>
                        <div class="col-md-10">
                            <input type="submit" class="btn btn-primary" value="ثبت" />
                            @Html.ActionLink("بازگشت به فهرست", "Index")
                        </div>
                    </div>
</fieldset>

        }
    </div>
</section>
