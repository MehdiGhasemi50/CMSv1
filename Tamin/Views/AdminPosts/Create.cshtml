@model Tamin.Models.Post
@{
    ViewBag.Title = "افزودن ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="widget">
        
            <div class="widget-header bordered-top bordered-palegreen">

                <span class="widget-caption">ایجاد خبر جدید</span>
            </div>

            @*<div class="widget-body">*@
                <div class="collapse in">




                    @using (Html.BeginForm("Create", "AdminPosts", FormMethod.Post, new { @id = "form_UploadFile", @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                        <div class="col-md-12 padding-10">
                            <div class="form-group">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                            </div>
                        </div>

                       
                        <div class="col-md-12 padding-10">
                            <div class="form-group">
                                @Html.LabelFor(model => model.PostTitle, new { @class = "control-label col-md-2" })
                                @Html.TextBoxFor(model => model.PostTitle, new { @type = "text", @class = "form-control col-md-4", @id = "definput", @placeholder = "عنوان خبر را وارد کنید" })
                               
                                @*@Html.ValidationMessageFor(model => model.PostTitle)*@
                            </div>
                        </div>

                              
                           





                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostGroupID, new { @class = "control-label col-md-2" })
                                    @*<div class="col-md-10">*@
                                        @Html.DropDownList("PostGroupID", "--عنوان گروه خبر را انتخاب کنید--")
                                        @Html.ValidationMessageFor(model => model.PostGroupID)
                                    @*</div>*@
                                </div>
                            </div>
                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Summary, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Summary)
                                        @Html.ValidationMessageFor(model => model.Summary)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostText, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.PostText)
                                        @Html.ValidationMessageFor(model => model.PostText)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PostIsActive, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.PostIsActive)*@
                                    </div>
                                        
                                            <div class="col-xs-4">
                                                @Html.CheckBoxFor(model => model.PostIsActive, new { @class = "checkbox-slider slider-icon colored-blue", @type = "checkbox" })
                                                <span class="text"></span>
                                            </div>
                                       
                                            @Html.ValidationMessageFor(model => model.PostIsActive)
                                        
                                </div>
                            </div>
                           




                           <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Priority, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.Priority)*@
                                        <label class="pull-right">
                                            @Html.CheckBoxFor(model => model.Priority, new { @class = "checkbox-slider slider-icon colored-blue", @type = "checkbox" })
                                            <span class="text"></span>
                                        </label>
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Comment_status, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @*@Html.EditorFor(model => model.Comment_status)*@
                                        <label class="pull-right">
                                            @Html.CheckBoxFor(model => model.Comment_status, new { @class = "checkbox-slider slider-icon colored-blue", @type = "checkbox" })
                                            <span class="text"></span>
                                        </label>
                                        @Html.ValidationMessageFor(model => model.Comment_status)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 padding-10">
                                <div class="widget collapsed">
                                    <div class="widget-header">
                                        <span class="widget-caption">تعیین تاریخ شروع و پایان برای خبر</span>
                                        <div class="widget-buttons">
                                            <a href="#" data-toggle="collapse">
                                                <i class="fa fa-plus blue"></i>
                                            </a>
                                        </div><!--Widget Buttons-->
                                    </div><!--Widget Header-->
                                    <div class="widget-body">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="col-md-12 padding-10">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Startdate, new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.Startdate, new @*{ htmlAttributes = new*@ { @class= "form-control col-md-4" } )
                                                  

                                                                @Html.ValidationMessageFor(model => model.Startdate)
</div>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 padding-10">
                                                    <div class="form-group">
                                                        @Html.LabelFor(model => model.Enddate, new { @class = "control-label col-md-2" })
                                                        <div class="col-md-10">
                                                            @Html.EditorFor(model => model.Enddate, new { @class = "form-control col-md-4" })
                                                            @Html.ValidationMessageFor(model => model.Enddate)
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div><!--Widget Body-->
                                </div><!--Widget-->
                            </div>
                            <div class="col-md-12 padding-10">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ImageUrl, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ImageUrl)
                                        @Html.ValidationMessageFor(model => model.ImageUrl)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12 padding-10">
                                <div id="buttons">
                                    <div class="col-md-2">
                                    </div>
                                    <div class="col-md-10">
                                        <br />
                                        <input type="submit" class="btn btn-success" value="ثبت" />
                                        @Html.ActionLink("بازگشت به فهرست", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            </div>

                            }
                        </div>


            @*</div>*@
        
</div>






               
            

